<%- include('./partials/header') %>
    <div class="w-full h-screen flex items-start px-20 py-20">
        <div class="w-[25%] flex h-screen flex-col items-start">
            <div class="flex flex-col">
                <a class="block w-fit mb-2" href="">All Products</a>
                <a class="block w-fit mb-2" href="">Create new product</a>
            </div>
        </div>
        <div class="w-[75%] flex flex-col gap-5 h-screen">
            <a class="text-red-500" href="/owners/deleteAll">Delete all</a>
            <div class="flex items-start gap-5">
                <% if(products.length > 0){ %>
                    <% products.forEach((value)=>{ %>
                        <div class="w-60 bg-red-500">
                            <div class="w-full h-52 bg-[<%= value.bgcolor %>]">
                                <img src="data:image/jpeg;base64,<%= value.image.toString('base64') %>" alt="" class="w-full h-full object-cover">
                            </div>
                            <div class="flex justify-between bg-[<%= value.panelcolor %>] text-[<%= value.textcolor %>] items-center px-4 py-4">
                                <div>
                                    <h3><%= value.name %></h3>
                                    <h4>â‚¹ <%= value.discount %></h4>
                                </div>
                                <a class="w-7 h-7 flex items-center justify-center rounded-full bg-white" href="">
                                    <i class="ri-add-line"></i>
                                </a>
                            </div>
                        </div>
                    <% }) %>
               <% }else{ %>
                    <div>
                        <h1>No products yet</h1>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
    <%- include('./partials/footer') %>